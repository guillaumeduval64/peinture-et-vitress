{% extends 'MyAppApBundle::layout.html.twig' %}

{% block title %}Modifier client: {{ client.nom }} {% endblock %}

{% block content %}
<p><a href="{{ path('myapp_client_lister') }}"><img src="{{ asset('bundles/myappap/images/previous.png') }}"/><img src="{{ asset('bundles/myappap/images/user.png') }}"/></a></p>

{% if message %}
<p><img src="{{ asset('bundles/myappap/images/check.png') }}"/></p>
{% endif %}








  <div class="row" style="width: 836px;">
    <div>
        <form action="" method="POST" {{ form_enctype(form) }} class="form-horizontal" role="form">
        <fieldset>

          <!-- Form Name -->
          <legend>Modifier un client:</legend>
            {{ form_errors(form) }}
            <!-- Text input-->
            <div class="form-group">
                <label class="col-sm-1 control-label" for="textinput">Flag:</label>
                <div class="col-sm-1">
                    {{ form_row(form.flag) }}
                </div>

                <div class="col-sm-10">
                    {{ form_widget(form.titles) }}
                </div>
            </div>



            <div class="form-group">
                <div class="col-sm-3">
                    {{ form_widget(form.etat,{ 'attr': {'class':'btn btn-default dropdown-toggle'} }) }}
                </div>

                <div class="col-sm-2">
                    {{ form_widget(form.ancien,{ 'attr': {'class':'btn btn-default dropdown-toggle'} }) }}
                </div>
                <div class="col-sm-2">
                    {{ form_widget(form.service,{ 'attr': {'class':'btn btn-default dropdown-toggle'} }) }}
                </div>
            </div>
            <h3>Client:</h3>
            <div class="form-group">
                <div class="col-sm-4">
                    {{ form_row(form.nom, { 'attr': {'class':'form-control','placeholder': 'Nom'} }) }}
                </div>

                <div class="col-sm-4">
                    {{ form_row(form.prenom, { 'attr': {'class':'form-control','placeholder': 'Pr√©nom'} }) }}
                </div>
                <div class="col-sm-4">
                    {{ form_row(form.email, { 'attr': {class:'form-control','placeholder': 'E-mail' } }) }}
                </div>
            </div>



            <h3>Adresse:</h3>
            <div class="form-group">
                <div class="col-sm-2">
                    {{ form_widget(form.number, { 'attr': {class:'form-control','placeholder': 'Numero'} }) }}
                </div>

                <div class="col-sm-3">
                    {{ form_widget(form.street, { 'attr': {class:'form-control','placeholder': 'Rue' } }) }}
                </div>
                <div class="col-sm-2">
                    {{ form_widget(form.city, { 'attr': {class:'form-control'} }) }}
                </div>
                <div class="col-sm-2">
                    {{ form_widget(form.pc, { 'attr': {class:'form-control','placeholder': 'PC',} }) }}
                </div>
            </div>
            <h3>RDV:</h3>
            <div class="form-group">
                <div class="col-sm-3">
                    {{ form_widget(form.date, { 'attr': {'class':'input-medium date' ,'placeholder': 'Date de rendez-vous'} }) }}
                </div>
                <label class="col-sm-4 control-label" style="margin-left:35px;" for="textinput">Heure:</label>
                <div class="col-sm-3">
                    {{ form_widget(form.heure, { 'attr': {'class':'input-small timepicker'} }) }}
                </div>
            </div>

            <h3>Phones:</h3>
            <ul class="phones" data-prototype="{{ form_widget(form.phones.vars.prototype)|e }}">
                {# iterate over each existing tag and render its only field: name #}
                {% for phone in form.phones %}
                    <div class="col-sm-2">
                        <li>

                    </div>


                    <div class="form-group">
                        <div class="col-sm-2">
                            {{ form_widget(phone.phoneType, { 'attr': {'placeholder': 'Phone', 'class':'form-control'} }) }}
                        </div>

                        <div class="col-sm-2">
                            {{ form_widget(phone.phone, { 'attr': {class:'form-control'} }) }}</li>
                        </div>
                    </div>

                {% endfor %}
            </ul>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <div class="pull-right">
                        <button class="btn btn-default">Cancel</button>


                        <input type="submit" src="{{ asset('bundles/myappap/images/add.png') }}" title="Ajouter"/>
                        {{ form_rest(form) }}
                    </div>
                </div>
            </div>

        </fieldset>
        </form>
    </div><!-- /.col-lg-12 -->
</div><!-- /.row -->

{% javascripts

    '@MyAppApBundle/Resources/public/js/phone.js' %}
    <script src="{{ asset_url }}"></script>
      
{% endjavascripts %}


{% endblock %}
