


{% block title %}{% endblock %}

{% block content %}



  <div class="modal-dialog">
    <div class="modal-content">
        <form action="{{ path('myapp_estimation_voirClient', {'id' : client.id}) }}" method="post">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">Ajouter un service à: {{ client.prenom|capitalize }} {{ client.nom|upper }} </h4>
      </div>
      <div class="modal-body">

    {{ form_widget(formNote) }}


<table class="table table-hover">

<tr>
	<th>
		Créé:
	</th>
	<th>
		Type:
	</th>
	<th>
		Note:
	</th>
</tr>
    {% for n in notes %}
    <tr>
    	<td style="width:10%;">{{ n.created|date('d/m/y') }}:</td>
    	<td style="width:10%; padding-left:5px;">{{ n.type }}</td>
    <td>{{ n.note|capitalize }}</td>
    </tr>
{% else %}

        Aucunes notes trouvées

{% endfor %}
</table>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <input type="submit" class="btn btn-primary" value="Ajouter" />
      </div>
</form></div></div>
{% endblock %}




