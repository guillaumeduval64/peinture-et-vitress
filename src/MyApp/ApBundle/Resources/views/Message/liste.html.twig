<table class="table table-hover">
    <br>
{% for m in messages%}   
    <tr>
        <td style="width:8%">{{ m.created|date('d/m') }}: </td>
        <td style="width:12%"><b>{{ m.user }} </b>{{ m.created|date('G:i') }} </td>
        <td>{{ m.message|capitalize }}</td>
    </tr>
{% else %}
<p>Aucun messages</p>
{% endfor %}
</table>
<br>